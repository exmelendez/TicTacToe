<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainActivityBG"
    tools:context="com.example.android.tictactoe.MainActivity">

    <RelativeLayout
        android:id="@+id/gameplay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90000000">

        <TextView
            android:id="@+id/game_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/game_title_tv"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/gameplay_header">

        <TextView
            android:id="@+id/a1_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="80sp"/>

        <TextView
            android:id="@+id/b1_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:textSize="90sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tic_tac_board" />

    </RelativeLayout>

</RelativeLayout>